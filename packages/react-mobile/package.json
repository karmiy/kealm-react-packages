{
    "name": "@kealm/react-mobile",
    "version": "0.4.9",
    "description": "移动端 React UI 组件库",
    "main": "lib/index.js",
    "typings": "lib/index.d.ts",
    "files": [
        "lib"
    ],
    "scripts": {
        "build:theme": "gulp build --gulpfile ./gulpfile.js",
        "build:images": "node ./scripts/image-base64.js",
        "build:components": "tsc -p ./tsconfig.prod.json",
        "build:lib": "npm run build:images && npm run build:components && npm run build:theme",
        "publish": "npm run build:lib && npm publish"
    },
    "peerDependencies": {
        "@kealm/react-hooks": "^0.1.0"
    },
    "devDependencies": {
        "@babel/core": "^7.14.3",
        "@babel/preset-env": "^7.14.2",
        "@kealm/react-hooks": "1.0.5",
        "@rollup/plugin-babel": "^5.3.0",
        "@rollup/plugin-node-resolve": "^13.0.0",
        "@types/node": "^15.12.2",
        "@types/react-transition-group": "^4.4.1",
        "gulp": "^4.0.2",
        "gulp-autoprefixer": "^7.0.1",
        "gulp-cssmin": "^0.2.0",
        "gulp-sass": "^4.1.0",
        "rollup": "^2.49.0",
        "rollup-plugin-typescript2": "^0.30.0",
        "typescript": "^4.2.4"
    },
    "license": "ISC",
    "dependencies": {
        "date-fns": "^2.22.1",
        "react-transition-group": "^4.4.2",
        "tslib": "^2.2.0"
    }
}